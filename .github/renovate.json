{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:js",
    "github>Trim21/renovate-config:app"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["renovate"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^.*qbittorrent-nox\\.yaml$"],
      "matchStrings": ["QB_VERSION: '(?<currentValue>.*?)'"],
      "depNameTemplate": "github.com/qbittorrent/qBittorrent",
      "datasourceTemplate": "github-tag"
    },
    {
      "customType": "regex",
      "fileMatch": ["^.*qbittorrent-nox\\.yaml$"],
      "matchStrings": ["LT_VERSION: '(?<currentValue>.*?)'"],
      "depNameTemplate": "github.com/arvidn/libtorrent",
      "datasourceTemplate": "github-tag"
    }
  ]
}
